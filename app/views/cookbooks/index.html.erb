<h1 align="center">Listing cookbooks</h1>
<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'cookbooks' %>
<% end %> 

  
<% @cookbooks.each do |cookbook| %>

<table align="center" border="2">
<tr>
    <th>Recipe</th>
    <th>Yield</th>
    <th>Prep Time</th>
    <th>Cook Time</th>
    <th>Ingredients</th>
    <th>Directions</th>
  </tr>

  <tr>
    <td><%= cookbook.title %></td>
    <td><%= cookbook.servings %></td>
    <td><%= cookbook.preptime %></td>
    <td><%= cookbook.cooktime %></td>
    <td><%= cookbook.ingredients %></td>
    <td><%= cookbook.directions %></td>
    <td><%= link_to 'Show', cookbook %></td>
    <td><%= link_to 'Edit', edit_cookbook_path(cookbook) %></td>
    <td><%= link_to 'Destroy', cookbook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'Comments', cookbook %></td>
  </tr>
  <p>
  
  
  </p>
<% end %>
</table>

<br />
<div align="center">
<%= link_to 'New Cookbook', new_cookbook_path %>
</div>
<div align="center">
<%=link_to 'Edit Profile', edit_user_path(session[:User_id]) %>
</div>
