%h1 Sign in

%div
  = form_tag '/users/authenticate' do
    %div{:align => "center"}
      Username *:
      = text_field_tag :username, params[:username]
      %br/
      %br/
      Password *:
      = password_field_tag :password, params[:username]
      %br/
      %br/
      = check_box_tag :remember_me, 1, params[:remember_me] 
      = label_tag :remember_me 
      = submit_tag 'Login'
      %br/
      %br/
     
      = link_to ' New User?   SignUp' , new_user_path
       = link_to ' forgotten password?', new_password_reset_path
      %br/
      
    %div
